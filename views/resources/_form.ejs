<!--
  Step 1: The form must be sharable between the new and edit views.
-->
<form action="<%= (typeof actionPath === 'undefined') ? '/resources' : actionPath %>", method="POST">
  <% if (typeof actionPath !== 'undefined') { %>
    <input type="hidden" name="id" value="<%= formData.id %>">
  <% } %>

  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" class="form-control" value="<%= formData.title %>">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" class="form-control summernote">
      <%= formData.description %>
    </textarea>
  </div>


  
  <div class="form-group">
    <label for="content">Author</label>
    <textarea name="content" class="form-control">
      <%= formData.content %>
    </textarea>
  </div>

  <div class="form-group">
    <label for="rating">Rating</label>
    <textarea name="rating" class="form-control">
      <%= formData.rating %>
    </textarea>
  </div>



  <div class="form-group">
    <button class="btn btn-dark">Submit</button>
  </div>
</form>